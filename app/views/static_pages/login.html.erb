<%= form_tag login_path, class: "form-horizontal login-form", role: "form" %>

  <div class="form-group">
    <%= label_tag :login, nil, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= text_field_tag :login, nil, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag :password, nil, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= password_field_tag :password, nil, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= submit_tag 'Login', class: "btn btn-success btn-block" %>
    </div>
  </div>

